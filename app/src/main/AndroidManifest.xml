            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.base.view.BaseActivity"/>
        <activity android:name=".ui.character.view.CharacterActivity"
            android:theme="@style/Theme.OdysseeDesVagabonds.NoActionBar" />
