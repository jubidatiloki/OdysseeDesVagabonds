        android:supportsRtl="true"
        android:theme="@style/Theme.OdysseeDesVagabonds">

        <activity android:name=".ui.home.view.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.OdysseeDesVagabonds.NoActionBar"
