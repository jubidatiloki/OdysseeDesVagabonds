            android:theme="@style/Theme.OdysseeDesVagabonds.NoActionBar" />
        <activity android:name=".ui.dice.view.DiceActivity"
            android:theme="@style/Theme.OdysseeDesVagabonds.NoActionBar" />
        <activity android:name=".ui.bestiary.view.BestiaryActivity"
            android:theme="@style/Theme.OdysseeDesVagabonds.NoActionBar" />
        <activity android:name=".ui.rule.view.RuleActivity"
            android:theme="@style/Theme.OdysseeDesVagabonds.NoActionBar" />
        <activity android:name=".ui.equipment.view.EquipmentActivity"
            android:theme="@style/Theme.OdysseeDesVagabonds.NoActionBar" />
